{
  "name": "@composi/styler",
  "version": "1.0.1",
  "description": "Create virtual stylesheets scoped to a component.",
  "main": "src/index.js",
  "scripts": {
    "build": "run-s format lint checkjs test",
    "checkjs": "tsc --allowJs --checkJs --noEmit --moduleResolution node --target ES6 src/*.js",
    "format": "prettier --no-semi --single-quote --write ./src/*.js",
    "lint": "eslint --config ./.eslintrc.json src",
    "start": "run-s format lint checkjs test",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/composi/styler.git"
  },
  "keywords": [
    "css",
    "stylesheet",
    "component"
  ],
  "author": "Robert Biggs",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/composi/styler/issues"
  },
  "homepage": "https://github.com/composi/styler#readme",
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.0.1",
    "@babel/preset-env": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "eslint": "^4.19.1",
    "fake-indexeddb": "^2.0.4",
    "jest": "^23.6.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.7",
    "typescript": "^3.0.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
